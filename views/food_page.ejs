<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
<link href="https://fonts.googleapis.com/css2?family=Chivo+Mono:wght@300&family=Poppins:wght@500&display=swap" rel="stylesheet">
<link rel="stylesheet" href="../assets/CS/food_page.css">

<body>
    <h1>Welcome to Orders page</h1>

     <!-- --------  Order button  ----------- -->
    <div>
        <button type="button" class="btn btn-primary Recipe-button" data-bs-toggle="collapse" data-bs-target="#demo">Order</button>
          <div id="demo" class="collapse input-container">
              <div>
                <button data-bs-toggle="collapse" data-bs-target="#demo" class="close-form" >
                 X
                </button>
              </div> 
               <div id="input-block">
                <form id="form-box" action="/<%=id%>" id="new-recipe-form" method="post">
                   <div class="section"> 
                    <label class="labels">Order Title:&nbsp&nbsp </label>
                    <input class="input-box"  class="input-values" name="dishName" placeholder="Order name" required>
                   </div>
                   <div class="section"> 
                    <label class="labels">Price: &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp </label>
                    <input class="input-box"  class="input-values" name="price" placeholder="price of the Recipe" required>
                   </div>
                   <div class="section">  
                    <!-- <label class="labels"><p>Author :&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&emsp;&emsp;&emsp;&emsp;Title Recipe</p></label> -->
                    <INPUT TYPE="hidden" name="userid" VALUE="<%=id%>"/>
                   </div>
                   <div id="desc-div" class="section"> 
                    <label class="labels desc" for="descrition">Description :</label>
                    <textarea class="input-box desc-input" name="description" cols="60" rows="6" placeholder="Type Here..." required></textarea>
                   </div> 
                    <input type="submit" value="Submit">
                 </form>
                </div>  
          </div>

        <!-- ---------  orders display section  ------------ -->
        <div class="orders-section">
            <% if(user.Orders.length >0 ){%>
              <ul>
                <% for(o of user.Orders){%>
                   <li>
                      <div class="orders-box">
                        <div class="orders-items">
                           <h4>Name: <span><%= o.dishName %></span></h4>
                        </div>
                        <div class="orders-items">
                            <h4>Price: <span><%= o.price %></span></h4>
                        </div>
                        <div class="orders-items">
                            <h4>Description: <span><%= o.description %></span></h4>
                        </div>  
                      </div> 
                    </li>  
                <%}%>
              </ul>      
            <%}else{%>
                <span id="no-order"><h4>No orders created yet please click on the button in top right</h4></span>
            <%}%>
        </div>
 
</body>